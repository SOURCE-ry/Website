{
  "standard.enable": false, // for the fellow ts-standard enjoyers üç∑ü¶ß
  "editor.tabSize": 2,
  "editor.rulers": [80, 120],
  "editor.insertSpaces": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.cache": true,
    "**/node_modules": true,
    "**/public": true
  }
}
